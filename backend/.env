# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=automate_my_blog
DB_USER=automate_user
DB_PASSWORD=your_password_here

# Existing Environment Variables
JWT_SECRET=fallback-secret-for-development
JWT_EXPIRES_IN=7d
OPENAI_API_KEY=your_openai_key_here
OPENAI_MODEL=gpt-3.5-turbo

# Application Settings
NODE_ENV=development
PORT=3001

# Feature Flags
USE_DATABASE=true
ENABLE_REFERRALS=true
ENABLE_ADMIN_FEATURES=true
ENABLE_ADMIN_ANALYTICS=true
ENABLE_ADMIN_USERS=true

# Development Settings
SHOW_DEV_BORDERS=true
SHOW_MOCK_SERVER_METRICS=true
ENABLE_FEATURE_FLAG_MANAGEMENT=true
CONTENT_READ_ONLY_MODE=false